---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Learn to create viral internet memes with our expert tutor" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <ViewTransitions />
  </head>
  <body class="bg-charcoal text-white font-poppins">
    <svg
    class="w-full pointer-events-none left-0 bottom-0 fixed opacity-50 inset-0 z-0"
    width="100%"
    height="100%">
    <defs>
      <radialGradient
        id="blueGradient"
        cx="50%"
        cy="50%"
        r="50%"
        fx="50%"
        fy="50%">
        <stop
          offset="0%"
          style={{
            stopColor: 'rgba(255, 255, 0, 0.4)',
            stopOpacity: 1,
          }}
        />
        <stop
          offset="25%"
          style={{
            stopColor: 'rgba(255, 255, 0, 0.3)',
            stopOpacity: 1,
          }}
        />
        <stop
          offset="50%"
          style={{
            stopColor: 'rgba(255, 255, 0, 0.1)',
            stopOpacity: 1,
          }}
        />
        <stop
          offset="75%"
          style={{
            stopColor: 'rgba(255, 255, 0, 0.05)',
            stopOpacity: 1,
          }}
        />
        <stop
          offset="100%"
          style={{
            stopColor: 'rgba(255, 255, 0, 0)',
            stopOpacity: 1,
          }}
        />
      </radialGradient>
    </defs>
    <circle cx="50%" cy="0%" r="100%" fill="url(#blueGradient)" />
  </svg>
  <svg
  class="pointer-events-none fixed isolate z-50 opacity-70 mix-blend-soft-light"
  width="100%"
  height="100%">
  <filter id="noise">
    <feTurbulence
      type="fractalNoise"
      baseFrequency="0.80"
      numOctaves="4"
      stitchTiles="stitch"></feTurbulence>
  </filter>
  <rect width="100%" height="100%" filter="url(#noise)"></rect>
</svg>
    <Navbar />
    <slot />
    <Footer />
    <script>
      document.addEventListener('astro:page-load', () => {
        const toggleHighContrast = document.getElementById('toggleHighContrast');
        if (toggleHighContrast) {
          toggleHighContrast.addEventListener('click', () => {
            document.documentElement.classList.toggle('high-contrast');
          });
        }
      });
    </script>
  </body>
</html>
<style is:global>
  :root {
    --accent-yellow: 255, 215, 0;
    --accent-green: 0, 255, 0;
    --accent-orange: 255, 165, 0;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  .high-contrast {
    filter: contrast(125%) brightness(110%);
  }
</style>