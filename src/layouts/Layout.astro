---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Learn to create viral internet memes with our expert tutor" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <ViewTransitions />
  </head>
  <body class="bg-charcoal text-white font-poppins">
    <Navbar />
    <slot />
    <Footer />
    <script>
      document.addEventListener('astro:page-load', () => {
        const toggleHighContrast = document.getElementById('toggleHighContrast');
        if (toggleHighContrast) {
          toggleHighContrast.addEventListener('click', () => {
            document.documentElement.classList.toggle('high-contrast');
          });
        }
      });
    </script>
  </body>
</html>
<style is:global>
  :root {
    --accent-yellow: 255, 215, 0;
    --accent-green: 0, 255, 0;
    --accent-orange: 255, 165, 0;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  .high-contrast {
    filter: contrast(150%) brightness(120%);
  }
</style>