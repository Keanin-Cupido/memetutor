---
import { Icon } from 'astro-icon';
---

<nav class="sticky top-0 z-50 bg-charcoal/80 backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href="#" class="text-accent-yellow font-bold text-xl">MemeGodTutor</a>
      </div>
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a href="#about" class="text-gray-300 hover:text-accent-yellow px-3 py-2 rounded-md text-sm font-medium">About</a>
          <a href="#course" class="text-gray-300 hover:text-accent-yellow px-3 py-2 rounded-md text-sm font-medium">Course</a>
          <a href="#showcase" class="text-gray-300 hover:text-accent-yellow px-3 py-2 rounded-md text-sm font-medium">Showcase</a>
          <a href="#testimonials" class="text-gray-300 hover:text-accent-yellow px-3 py-2 rounded-md text-sm font-medium">Testimonials</a>
          <a href="#pricing" class="text-gray-300 hover:text-accent-yellow px-3 py-2 rounded-md text-sm font-medium">Pricing</a>
          <a href="#contact" class="text-gray-300 hover:text-accent-yellow px-3 py-2 rounded-md text-sm font-medium">Contact</a>
        </div>
      </div>
      <div class="flex items-center">
        <button id="toggleHighContrast" class="text-gray-300 hover:text-accent-yellow p-2" aria-label="Toggle high contrast mode">
          <Icon name="mdi:contrast" class="w-6 h-6" />
        </button>
        <button id="mobileMenuButton" class="md:hidden text-gray-300 hover:text-accent-yellow p-2" aria-label="Open mobile menu">
          <Icon name="mdi:menu" class="w-6 h-6" />
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu, show/hide based on menu state -->
  <div id="mobileMenu" class="md:hidden hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="#about" class="text-gray-300 hover:text-accent-yellow block px-3 py-2 rounded-md text-base font-medium">About</a>
      <a href="#course" class="text-gray-300 hover:text-accent-yellow block px-3 py-2 rounded-md text-base font-medium">Course</a>
      <a href="#showcase" class="text-gray-300 hover:text-accent-yellow block px-3 py-2 rounded-md text-base font-medium">Showcase</a>
      <a href="#testimonials" class="text-gray-300 hover:text-accent-yellow block px-3 py-2 rounded-md text-base font-medium">Testimonials</a>
      <a href="#pricing" class="text-gray-300 hover:text-accent-yellow block px-3 py-2 rounded-md text-base font-medium">Pricing</a>
      <a href="#contact" class="text-gray-300 hover:text-accent-yellow block px-3 py-2 rounded-md text-base font-medium">Contact</a>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('astro:page-load', () => {
    const mobileMenuButton = document.getElementById('mobileMenuButton');
    const mobileMenu = document.getElementById('mobileMenu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>